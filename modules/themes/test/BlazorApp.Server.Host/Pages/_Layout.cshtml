@using Microsoft.AspNetCore.Components.Web
@using Tchivs.Abp.AspNetCore.Components.Server.Bundling
@namespace BlazorApp.Server.Host.Pages

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="~/" />
    <component type="typeof(HeadOutlet)" render-mode="ServerPrerendered" />
    <abp-style-bundle name="@BlazorStandardBundles.Styles.Global" /> 
</head>
<body>
    @RenderBody()

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>

  <abp-script-bundle name="@BlazorStandardBundles.Scripts.Global" />

</body>
</html>
