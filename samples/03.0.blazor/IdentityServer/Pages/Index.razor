@page "/"

@inherits TchivsBaseComponent
@if (CurrentUser.IsAuthenticated)
{
    <Card>
        <CardHeader>@CurrentUser.UserName</CardHeader>
    </Card>

}
else
{
    <div class="text-center">
        <i class="fa fa-user d-block" style="font-size: 10em; color: #aaa"></i><br /><br />
        <a class="accordion-button-info"  href="/Account/Login">Login</a>
    </div>
}